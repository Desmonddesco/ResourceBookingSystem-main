@model ResourceBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<h4>Booking Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="ResourceId" class="form-label">Select Resource</label>
                <select asp-for="ResourceId" class="form-select" asp-items="ViewBag.ResourceId"></select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label">Start Time</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndTime" class="form-label">End Time</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BookedBy" class="form-label">Booked By</label>
                <input asp-for="BookedBy" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="BookedBy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Purpose" class="form-label">Purpose</label>
                <textarea asp-for="Purpose" class="form-control" rows="3" placeholder="Reason for booking"></textarea>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
